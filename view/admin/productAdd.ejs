           <script>
  document.getElementById('gallery').addEventListener('change', function(e) {
    const files = e.target.files;
    const previewContainer = document.getElementById('imagePreview');
    previewContainer.innerHTML = '';
    let imageCount = 0; // Track the number of images

    for (let i = 0; i < files.length; i++) {
        const file = files[i];
        const reader = new FileReader();

        reader.onload = function() {
            const img = document.createElement('img');
            img.src = reader.result;
            img.style.width = '150px'; // Set image width to 150px
            previewContainer.appendChild(img);
            imageCount++; // Increment image count

            const deleteBtn = document.createElement('button');
            deleteBtn.textContent = 'Delete';
            deleteBtn.classList.add('btn', 'btn-primary', 'create-submit-btn'); // Add classes
            deleteBtn.addEventListener('click', function() {
                img.remove();
                deleteBtn.remove();
                imageCount--; // Decrement image count
                updateQuantity(); // Update quantity display
                resetFileInput(); // Reset file input
            });
            previewContainer.appendChild(deleteBtn);

            updateQuantity(); // Update quantity display initially
        }

        reader.readAsDataURL(file);
    }

    function updateQuantity() {
        const quantityDisplay = document.getElementById('imageQuantity');
        quantityDisplay.textContent = 'Quantity: ' + imageCount;
    }

    function resetFileInput() {
        document.getElementById('gallery').value = ''; // Reset file input value
    }
});


